<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="dada_fos_api_request" path="/fos/request">
        <default key="_controller">DadaApiBundle:Default:fosRequest</default>
    </route>
    <route id="dada_api_request" path="/request">
        <default key="_controller">DadaApiBundle:Default:request</default>
    </route>
    <route id="dada_api_generate" path="/generate">
        <default key="_controller">DadaApiBundle:Default:generate</default>
    </route>

    <route id="dada_api_town_adverts" path="/town">
        <default key="_controller">DadaApiBundle:Api:getCityAdverts</default>
    </route>
    <route id="dada_api_category_adverts" path="/category">
        <default key="_controller">DadaApiBundle:Api:getCategoryAdverts</default>
    </route>
    <route id="dada_api_town_category_adverts" path="/town/category">
        <default key="_controller">DadaApiBundle:Api:getTownCategoryAdverts</default>
    </route>
    <route id="dada_api_advert" path="/">
        <default key="_controller">DadaApiBundle:Api:getAdvert</default>
    </route>
    <route id="dada_api_add_advert" path="/add" methods="POST">
        <default key="_controller">DadaApiBundle:Api:addAdvert</default>
    </route>
    <route id="dada_api_add_advert" path="/modify" methods="POST">
        <default key="_controller">DadaApiBundle:Api:modifyAdvert</default>
    </route>
    <route id="dada_api_add_advert" path="/delete" methods="POST">
        <default key="_controller">DadaApiBundle:Api:deleteAdvert</default>
    </route>
    <route id="dada_api_add_advert" path="/global">
        <default key="_controller">DadaApiBundle:Api:global</default>
    </route>
</routes>
